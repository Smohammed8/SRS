{% extends 'base.html.twig' %}

{% block title %}Program {% endblock %}

{% block body %}
    <h4>List of programs</h4>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Program name</th>
                <th> Program level </th>
                <th> Study year  </th>
                <th> Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.name }}</td>
                   <td>{{ program.programLevel }}</td>
                      <td>-</td>
                <td>
                    <a class="btn btn-sm btn-info btn-white btn-round"  href="{{ path('app_program_show', {'id': program.id}) }}"> <i class" fa fa-list"> </i>Show</a>
                    <a class="btn btn-sm btn-warning btn-white btn-round"  href="{{ path('app_program_edit', {'id': program.id}) }}"> <i class" fa fa-edit"> </i>Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_program_new') }}">Create new</a>
{% endblock %}
