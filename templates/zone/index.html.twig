{% extends 'base.html.twig' %}

{% block title %} Zone {% endblock %}

{% block body %}
    <h4> List of Zones </h4>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Zone </th>
                <th>Region </th>
                <th>No of woredas </th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zone in zones %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ zone.name }}</td>
                  <td>{{ zone.region }}</td>
                <td>{{ zone.woredas|length }}</td>
                <td>
                    <a href="{{ path('app_zone_show', {'id': zone.id}) }}">Show</a>
                    <a href="{{ path('app_zone_edit', {'id': zone.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_zone_new') }}">Create new</a>
{% endblock %}
