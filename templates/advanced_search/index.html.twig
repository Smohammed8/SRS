{% extends 'base.html.twig' %}

{% block title %}  Advanced Search {% endblock %}

{% block body %}
	<div class="col-md-12 cards-container">
		<div class="widget-header widget-header-blue widget-header-flat">
             <div class="pull-right tableTools-container">
                <a href=" " class="btn btn-info btn-sm float-right">
					Search by name
				</a>
			</div>
		</div>
		<div class="widget-body">
			<br> 
             {{form_start(form)}}
             {{form_errors(form)}}
			<div class="card">

				<div class="card-header">
					<div class="row">

						<div class="form-group col-md-3">
                             <label class="col-12 control-label no-padding-right">
								Ward
							</label>
							<div class="col-12"> {{ form_widget(form.ward,{'attr':{'class':'form-control select2'}}) }}
							</div>
						</div>
						<div class="form-group col-md-3">

							<label class="col-12 control-label no-padding-right">
								Unit
							</label>


							<div class="col-12"> {{form_widget(form.unit,{'attr':{'class':'form-control select2'}})}}
							</div>
						</div>


						<div class="form-group col-md-3">

							<label class="col-12 control-label no-padding-right">
								Do you know admission date?
							</label>


							<div class="col-12">
								<input type="text" name="date" id="end" autocomplete="off" class="form-control">

							</div>
							<br>
							<div class="pull-right tableTools-container">
								<button type="submit" class="btn btn-sm btn-primary btn-white btn-round">
									<i class="fa fa-search"></i>
									Search
								</button>
							</div>


						</div>
                         {{form_end(form)}}

					</div>
					<!-- /.col -->
				</div>
				<!-- /.col -->
		    	</div>
            </div>
     </div>
               
		{% endblock %}

