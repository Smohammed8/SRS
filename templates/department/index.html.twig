{% extends 'base.html.twig' %}

{% block title %} Department {% endblock %}

{% block body %}
    <h4>Clinical of Department </h4>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for department in departments %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ department.name }}</td>
                <td>{{ department.description }}</td>
                <td>
                        <a  class="btn btn-sm btn-primary btn-info btn-round" href="{{ path('app_department_show', {'id': department.id}) }}">
                    
                    <i class="ace-icon fa fa-eye bigger-120"></i> Show</a>
                   
                    <a  class="btn btn-sm btn-primary btn-warning btn-round" href="{{ path('app_department_edit', {'id': department.id}) }}">
                    
                    <i class="ace-icon fa fa-edit bigger-120"></i> Edit</a>
              
                      <a class="btn btn-xs btn-danger" href="{{ path('app_department_delete', {'id': department.id}) }}" title="Delete">
						<i class="ace-icon fa fa-trash bigger-120"></i> Delete
				   </a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="pull-right" style="margin-right:10px;" id="custompaginator">{{ knp_pagination_render(departments) }}</div>
    <a href="{{ path('app_department_new') }}">Create new</a>
{% endblock %}
