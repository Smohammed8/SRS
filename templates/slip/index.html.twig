{% extends 'base.html.twig' %}

{% block title %}Slip {% endblock %}

{% block body %}
    <h4> Patient Adminssion Slip </h4>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                 <th>Patient </th>
                <th>Seen Date</th>
                <th>Diagnosis</th>
                <th>AdmittingTeam</th>
                <th>EvaluatingResident</th>
                <th>SeniorSurgeon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slip in slips %}
            <tr>
                <td>{{  loop.index }}</td>
                  <td> <a href="{{ path('patient_show', {'id': slip.patient.id}) }}"> {{ slip.patient  }} </a></td>
                <td>{{ slip.seenDate ? slip.seenDate| eth_date  }}</td>
                <td>{{ slip.diagnosis }}</td>
                <td>{{ slip.admittingTeam }}</td>
                <td>{{ slip.evaluatingResident }}</td>
                <td>{{ slip.seniorSurgeon }}</td>
                <td>


                    <a class="btn btn-xs btn-info" href="{{ path('slip_show', {'id': slip.id}) }}" title="Edit">
						<i class="ace-icon fa fa-eye bigger-120"></i> View
				    </a>

                    <a class="btn btn-xs btn-warning" href="{{ path('slip_edit', {'id': slip.id}) }}" title="Edit">
						<i class="ace-icon fa fa-pencil bigger-120"></i> Edit
				    </a>
                    <a class="btn btn-xs btn-success" href="{{ path('print_slip', {'id': slip.id}) }}" title="Print out">
						<i class="ace-icon fa fa-print bigger-120"></i> Print
				    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No patien's slip found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="pull-right" style="margin-right:10px;" id="custompaginator">{{ knp_pagination_render(slips) }}</div>


{% endblock %}
