
{% block body %}
		<div class="col-md-12 cards-container">	

		<div class="widget-header widget-header-blue widget-header-flat">
		<div class="pull-right tableTools-container">
            	<a href=" {{ path('bed_index',{id:room.id}) }}" class="btn btn-info btn-sm float-right">  <i class="fa fa-close"></i> Close </a>
	               </div>
				</div>

			<div class="widget-body">
               <br>
		{{ form_start(form) }}
		{{ form_errors(form) }}
		<div class="card">

				<div class="card-header">
					<div class="col-xs-12">
            	</div>
                  	<div class="row">
		                  <div class="form-group col-md-4">

							<label class="col-12 control-label no-padding-right">
							Bed No.<span style="color:red;"> * </span>
							</label>


							<div class="col-12">

								{{ form_widget(form.name,{'attr':{'class':'form-control select2'}}) }}
							</div>
						</div>



                             <div class="form-group col-md-4">

							<label class="col-12 control-label no-padding-right">
							 Is functional <span style="color:red;"> * </span>
							</label>


							<div class="col-12">

								{{ form_widget(form.isFunctional,{'attr':{'class':'form-control select2'}}) }}
							</div>
						    </div>



                             <div class="form-group col-md-4">

							<label class="col-12 control-label no-padding-right">
							Do you want make free this bed? <span style="color:red;">  </span>
							</label>


							<div class="col-12">

							<select name="status" class="form-control select2">
                             <option value="0"> Yes </option>
						      <option value="1">No</option>

							</select>

							
							</div>
						</div>



                             <div class="form-group col-md-4">

							<label class="col-12 control-label no-padding-right">
							  Add to  impending? <span style="color:red;">  </span>
							</label>


							<div class="col-12">

							<select name="current_status" class="form-control select2">
                             <option value="1"> Yes </option>
						      <option value="0">No</option>

							</select>

							
							</div>
						</div>


                         <div class="form-group col-md-4">

							<label class="col-12 control-label no-padding-right">
							 Type <span style="color:red;"> * </span>
							</label>


							<div class="col-12">

								{{ form_widget(form.type,{'attr':{'class':'form-control select2'}}) }}
							</div>
						</div>


						
				   	<div class="pull-right tableTools-container">
							<button type="submit" class="btn btn-success mt-1 float-right">
							 <i class="fa fa-save"></i> {{ button_label|default('Save') }}
							</button>
						</div>


					</div>

					{{form_end(form)}}
               	
                   					</div><!-- /.col -->


	   
        </div><!-- /.col -->

          
     
				
{% endblock %}



