
{% extends 'base.html.twig' %}

{% block title %}Appointment index{% endblock %}

{% block body %}

<div class="row mt-3 col-12">
		<div class="col-12">
			<div class="card dcard">
				<div class="card-body px-1 px-md-3">

     <!--  Here flash message display -->

	    
	             <p style="color:red;" > Last patient appointment  </p>
		     	<div class="pull-right">
                <button type="button" class="btn btn-primary pull-right" onclick="window.location = '{{  path('print_appointment',{'id':appointment.id }) }}'"><i class="fa fa-print"></i> Print Out</button>

					&nbsp;&nbsp;
				 
                <button type="button" class="btn btn-primary pull-right" onclick="window.location = '{{  path('appointment_new',{'id':patient.id }) }}'"><i class="fa fa-plus"></i> New Appointment</button>

					</div>
                    <br>

	 <table class="table">
        <tbody>
        '   {% for appointment in appointments %}
            {% if appointment is not empty %}
            <tr>
                <th>Patient Name</th>
                <td>{{ appointment.patient.fname }}  {{ appointment.patient.mname }}  {{ appointment.patient.lname }}<td>
            </tr>
            <tr>
                <th>Medical Record Number</th>
                <td>{{ appointment.patient.mrn }}<td>
            </tr>

            <tr>
                <th> Date of appointment</th>
                <td>{{ appointment.createdAt ? appointment.createdAt|date('l, M d, Y') : '' }} </td>
            </tr>
                 <tr>
                <th> Reason of appointment</th>
                <td>{{ appointment.appointedReason ? appointment.appointedReason: 'No reason of appointment note' }}</td>
            </tr>
            
            <tr>
                <th> Appointment after adminssion</th>

                <td> {{'2 weeks' }}</td>
            </tr>
			    <tr>
                <th>  Appointment Status </th>
                 {% if  appointment.status=='yet' %}
                <td> {{'New' }}</td>
				    {% else %}
                 <td> {{'Closed' }}</td>
				  {% endif %}
				  
            </tr>
               <tr>
                <th> User</th>

                <td>{{ appointment.createdBy }}</td>
            </tr>
                <tr>
                <th> Appointment for</th>

                <td>{{'2 weeks' }}</td>
             </tr>
           
                 {% endif %}


								{% endfor %}
        
							</tbody>
						</table>
                   	<!-- table footer -->
						<div class="d-flex pl-4 pr-3 pt-35 border-t-1 brc-secondary-l3 flex-column flex-sm-row mt-n1px">


							<div class="btn-group ml-sm-auto mt-3 mt-sm-0">
							<div class="float-right">{{ knp_pagination_render(appointments) }}</div>
							</div>
						</div>

				</div>
				<!-- /.card-body -->
			
			</div>



	
		</div>
		

    </div>
    



   
{% endblock %}
{% block javascripts %}
<script src="{{ asset('assets/aayyo.js')}}"></script>
{% endblock %}
