{% extends 'base.html.twig' %}

{% block title %}Year index{% endblock %}

{% block body %}
    <h1>Year index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for year in years %}
            <tr>
                <td>{{ year.id }}</td>
                <td>{{ year.name }}</td>
                <td>
                    <a href="{{ path('app_year_show', {'id': year.id}) }}">show</a>
                    <a href="{{ path('app_year_edit', {'id': year.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_year_new') }}">Create new</a>
{% endblock %}
